<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/refreshKey"
        android:summary="@string/manualrefresh_prefmessage"
        android:title="@string/manualrefresh_preftitle"
        />

    <EditTextPreference
        android:defaultValue="@string/folderdefault_pref"
        android:key="mailFolder"
        android:title="@string/folderdefault_preftitle"
        android:summary="@string/folderdefault_prefmessage"
        />

    <ListPreference
        android:key="@string/defaultTabKey"
        android:title="@string/defaultcategory_preftitle"
        android:summary="@string/defaultcategory_prefmessage"
        android:entries="@array/defaultTabs"
        android:defaultValue="@string/defaultcategory_default"
        android:entryValues="@array/defaultTabs"
        />

    <Preference
        android:key="@string/exportLogsPref"
        android:summary="@string/exportlogs_summary"
        android:title="@string/exportlogs_title" />

