<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AboutDialog</item>
    </style>

    <style name="AppTheme_Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="android:listDivider">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AboutDialog_dark</item>
    </style>


    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">
    <item name="android:button">@null</item></style>
    <style name="dialogtheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>

    <style name="AboutDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AboutDialog_dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/button_bg_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>



</resources>
